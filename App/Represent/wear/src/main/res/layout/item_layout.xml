<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView android:id="@+id/item_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:adjustViewBounds="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/barbara_boxer"/>

    <TextView android:id="@+id/item_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_photo"
        android:layout_alignTop="@id/item_photo"
        android:layout_marginTop="30dp"
        android:text="___NAME___"/>

    <TextView android:id="@+id/item_textview_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_photo"
        android:layout_alignBottom="@id/item_photo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="___PARTY___"/>

</RelativeLayout>