<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.represent.ElectionResultsActivity"
    tools:deviceIds="wear_square">

    <TextView android:id="@+id/results_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2012 Election"/>
    <TextView android:id="@+id/results_county_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="___COUNTY_STATE___"/>

    <TextView android:id="@+id/results_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="___WINNER___"/>
    <TextView android:id="@+id/results_winpercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="___WIN%___"/>

    <TextView android:id="@+id/results_loser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text="___LOSER___"/>
    <TextView android:id="@+id/results_losepercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="___LOSE%___"/>
</LinearLayout>
